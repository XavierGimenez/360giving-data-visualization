{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "width": null,
    "height": null,
    "padding": 0,
  
    "data": [
      {
        "name": "table",
        "values": null,
        "transform": [
          {
            "type": "formula", "as": "angle",
            "expr": "[0, 0, 0][~~(random() * 3)]"
          },
          {
            "type": "formula", "as": "weight",
            "expr": "300"
          }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "color",
        "type": "linear",
        "domain": {
          "data" : "table",
          "field" : "count"
        },
        "range": ["rgb(123, 203, 196)", "rgb(8, 75, 140)"]
      }
    ],
  
    "marks": [
      {
        "type": "text",
        "from": {"data": "table"},
        "encode": {
          "enter": {
            "text": {"field": "text"},
            "align": {"value": "center"},
            "baseline": {"value": "alphabetic"},
            "fill": {"scale": "color", "field": "count"},
            "fillOpacity": {"value": 1}
          }
        },
        "transform": [
          {
            "type": "wordcloud",
            "size": null,
            "text": {"field": "text"},
            "fontSize": {"field": "datum.count"},
            "fontWeight": {"field": "datum.weight"},
            "fontSizeRange": [12, 80],
            "padding": 5
          }
        ]
      }
    ]
  }
  